<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExamenProva"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_Emisora"
        android:text="Emisoras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_Video"
        android:text="Video"
        app:layout_constraintStart_toStartOf="@id/b_Emisora"
        app:layout_constraintTop_toBottomOf="@id/b_Emisora"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_Grabacio"
        android:text="GrabaciÃ³"
        app:layout_constraintStart_toStartOf="@id/b_Video"
        app:layout_constraintTop_toBottomOf="@id/b_Video"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_Camara"
        android:text="Camara"
        app:layout_constraintStart_toStartOf="@id/b_Grabacio"
        app:layout_constraintTop_toBottomOf="@id/b_Grabacio"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_Map"
        android:text="Map"
        app:layout_constraintStart_toStartOf="@id/b_Camara"
        app:layout_constraintTop_toBottomOf="@id/b_Camara"
        />




</androidx.constraintlayout.widget.ConstraintLayout>